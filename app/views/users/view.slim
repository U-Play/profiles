.page-title-wrap: .page-title
  h1
    | History
    - if can? :manage, @user
      = link_to t('experience.add_new'), '#', id: 'adds-story__button'
- present @user do |user|
  .stories
    - if can? :manage, user.target
      #adds-story data-hide="#{@experience_hide}"
        = render 'experiences/new', experience: @new_experience
    - user.experiences.each do |experience_pres|
      = render 'experiences/show', experience_pres: experience_pres

  - if can? :manage, user.target
    coffee:
      $ ->
        window.story_adder.init()
